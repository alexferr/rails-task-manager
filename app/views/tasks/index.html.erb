
<h1>My Tasks</h1>

<% @tasks.each do |task| %>
<div>
  <% if task.completed %>
    <input type="checkbox" checked>
  <% else %>
    <input type="checkbox">
  <% end %>
  <%= link_to task.title, "/tasks/#{task.id}" %>
  <%= link_to "/ Delete",
            task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
</div>
<% end %>


<%= link_to "+ Create a new task", "/tasks/new" %>
