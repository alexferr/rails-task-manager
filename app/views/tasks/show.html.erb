<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<% if @task.completed %>
  <input type="checkbox" checked><p>This task is completed</p>
<% else %>
  <input type="checkbox"><p>This task is uncompleted</p>
<% end %>

<%= link_to "back to tasks", "/tasks" %>
<%= link_to "Edit this task", "/tasks/#{@task.id}/edit" %>
